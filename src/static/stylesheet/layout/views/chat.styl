.messages {
    display: block;
    width: 500px;
    margin: 0px auto;

    &__list {
        display: block;
        grid(100%);
        height: 300px;

        padding: 20px;
        margin-bottom: 0px;

        border: 2px solid c-green-dark;
        border-bottom: 0px;
        border-radius: 20px 20px 0px 0px;

        &__item {
            position: relative;
            border-radius: 10px;
            padding: 10px 20px;
            margin: 5px 0px;
            color: c-white;
            font-size: 14px;
            background-color: c-green-dark;
            transition: t-default;

            &.message-left {
                width: 90%;
                float: left;
                background-color: c-green-dark;
                left: 10px;
                &:before {
                    content: '';
                    position: absolute;
                    bottom: 8px;
                    left: -7px;
                    width: 0;
                    height: 0;
                    border-top: 10px solid transparent;
                    border-bottom: 10px solid transparent;

                    border-right:10px solid c-green-dark;
                }
            }
            &.message-right {
                width: 90%;
                float: right;
                background-color: c-green-dark + 25%;
                &:before {
                    content: '';
                    position: absolute;
                    bottom: 8px;
                    right: -7px;
                    width: 0;
                    height: 0;
                    border-top: 10px solid transparent;
                    border-bottom: 10px solid transparent;

                    border-left:10px solid c-green-dark + 25%;
                }
            }

            &:hover {
                box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.1);
            }
        }
    }
    &__input {
        clearfix();
        input {
            grid(80%);
            border-radius: 0px 0px 0px 20px;
        }
        button {
            grid(20%);
            border-radius: 0px 0px 20px 0px;
        }
    }
}
